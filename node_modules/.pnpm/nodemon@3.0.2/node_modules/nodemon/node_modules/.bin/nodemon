#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/aravind/projects/clean-architecture-ts/node_modules/.pnpm/nodemon@3.0.2/node_modules/nodemon/bin/node_modules:/home/aravind/projects/clean-architecture-ts/node_modules/.pnpm/nodemon@3.0.2/node_modules/nodemon/node_modules:/home/aravind/projects/clean-architecture-ts/node_modules/.pnpm/nodemon@3.0.2/node_modules:/home/aravind/projects/clean-architecture-ts/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/aravind/projects/clean-architecture-ts/node_modules/.pnpm/nodemon@3.0.2/node_modules/nodemon/bin/node_modules:/home/aravind/projects/clean-architecture-ts/node_modules/.pnpm/nodemon@3.0.2/node_modules/nodemon/node_modules:/home/aravind/projects/clean-architecture-ts/node_modules/.pnpm/nodemon@3.0.2/node_modules:/home/aravind/projects/clean-architecture-ts/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/nodemon.js" "$@"
else
  exec node  "$basedir/../../bin/nodemon.js" "$@"
fi
